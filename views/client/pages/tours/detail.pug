extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/moment.pug
include ../../mixins/alert-success.pug
block main
    +alert-success('Thêm tour vào giỏ hàng thành công!')
    .tour-detail
        .container.my-3
            .row
                .col-6
                    .inner-images
                        if(tour.images && tour.images.length > 0)
                            each image in tour.images 
                                .inner-image
                                    img(src=image alt="Tour Image")
                .col-6
                    .inner-title #{tour.title}
                    .inner-barcode
                        <i class="fa-solid fa-barcode"></i> Mã tour: #{tour.code}
                    .inner-time-start
                        <i class="fa-solid fa-calendar-days"></i> Lịch khởi hành: 
                        +formatDateTime(tour.timeStart)
                    .inner-stock
                        <i class="fa-solid fa-person-walking-luggage"></i> Còn lại: #{tour.stock} chỗ
                    .inner-price-special #{tour.price_special.toLocaleString()}đ
                    .inner-price #{tour.price.toLocaleString()}đ
                    .inner-percent Giảm tới #{tour.discount}đ%
                    form(
                        form-add-to-cart
                        tour-id=tour.id
                    )
                        input(
                            class="form-control mb-2"
                            type="number"
                            name="quantity"
                            value="1"
                            min="1"
                            max="10"
                        )
                        button(
                            type="submit"
                            class="btn btn-success btn-block"
                        ) Thêm vào giỏ hàng
            .row
                .col-12
                    .inner-infomation
                        .inner-label Thông tin tour
                        .inner-text #{tour.information}

                .col-12
                    .inner-infomation
                        .inner-label Lịch trình tour
                        .inner-text !{tour.schedule}